<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.FLAGGgaming.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Otros estilos de tu aplicación aquí -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/flagg</item>
        <item name="colorPrimaryVariant">@color/flagg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Hacer la barra de estado transparente -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    <style name="Widget.AppCompat.ProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium</item>
    </style>
</resources>