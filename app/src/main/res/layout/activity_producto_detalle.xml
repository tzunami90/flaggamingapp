<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layoutproductodetalle"
    android:padding="16dp"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/imageViewCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textViewSkuTienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewDescTienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewPrecioVta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/design_default_color_error"
        android:textSize="20sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textViewTiendaNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp" />
    <ProgressBar
        android:id="@+id/progressBarTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:visibility="gone" />
    <TextView
        android:id="@+id/textViewTiendaDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewTiendaDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewTiendaHorario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textViewTiendaMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textViewTiendaTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textViewTiendaInsta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <!-- LinearLayout para los iconos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iconAbrirEnMaps"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icgooglemaps"
            android:contentDescription="@string/abrir_en_google_maps"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/iconAbrirInsta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icinsta"
            android:contentDescription="@string/abrir_en_instagram"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/iconAbrirMail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icmail"
            android:contentDescription="@string/abrir_mail"
            android:clickable="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iconAbrirTel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icphone"
            android:contentDescription="@string/abrir_telefono"
            android:clickable="true"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>